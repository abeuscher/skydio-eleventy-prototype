{% block template %}{% endblock %}
{% set page = context.data %}
<!doctype html>
<html lang="{{ context.locale }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ page.content.meta.title or page.content.main.title }}
      {% if global.base.meta.author %} | {{ global.base.meta.author }}
      {% endif %}
    </title>
    {% block head %}{% endblock %}
    {# <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}"> #}
    <link rel="stylesheet" href="/_styles/style.css"/>
  </head>
  <body>
    {% inlineStyles context %}
    {% set hasHero = page
      .content
      .main
      .modules[0]
      ._type in['heroProductModule', 'hero2UpModule', 'simpleHeroModule'] %}

    <div class="site-wrapper {{ {
  'site-wrapper--has-hero': hasHero
} | classnames }}">
      {% block header %}
        {% pug "layouts/inc/header.pug",
        context %}
      {% endblock %}
      {% block content %}{% endblock %}
      {% block footer %}
        {% pug "layouts/inc/footer.pug",
        context %}
      {% endblock %}
    </div>
  </body>
</html>