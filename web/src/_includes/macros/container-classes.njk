{%- macro containerClasses(currentModule) -%}
    {{'pb-7 pb-sm-9'  if currentModule.verticalPadding === 'more'}}
    {{'pb-5 pb-sm-7'  if currentModule.verticalPadding === 'less' }}
    {{'pb-3 pb-sm-5' if currentModule.sectionHeader and currentModule.verticalPadding === 'evenless'}}
    {{'pb-0 pb-sm-0' if currentModule.sectionHeader and currentModule.verticalPadding === 'none'}}
    {{'py-7 py-sm-9' if not currentModule.sectionHeader and currentModule.verticalPadding === 'more'}}
    {{'py-5 py-sm-7' if not currentModule.sectionHeader and currentModule.verticalPadding === 'less'}}
    {{'py-3 py-sm-5' if not currentModule.sectionHeader and currentModule.verticalPadding === 'evenless'}}
    {{'py-0 py-sm-0' if not currentModule.sectionHeader and currentModule.verticalPadding === 'none'}}
    {% if currentModule.moduleStyle %}module-style--{{currentModule.moduleStyle}}
    {% endif %}
    {% if currentModule.moduleOverlap %}overlap--{{currentModule.moduleOverlap}}
    {% endif %}
{%- endmacro -%}